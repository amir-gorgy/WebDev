<% include ./partials/header %>
    <div class='ui main text container segment'>
        <div class='ui huge header'>
            <%=blog.title%>
        </div>
        <div class='ui top attached'>
            <div class='item'>
                <img class='ui centered rounded image' src="<%=blog.image%>" alt="">
                <div class='content'>    
                    <h3><%- blog.body %></h3>
                </div>
                <form action='/blogs/<%=blog.id%>?_method=DELETE' method='POST' id='delete'>
                    <button class='ui red inverted button'>Delete</button>
                </form>
                <a href="/blogs/<%=blog._id%>/edit" class = 'ui yellow inverted button'>Edit</a>
                <div class='description'>
                    <span><%= blog.created.toDateString() %></span>
                </div>
            </div>
        </div>

    </div>


<% include ./partials/footer %>
